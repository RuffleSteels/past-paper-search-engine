generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ExamPaper {
  id        Int    @id @default(autoincrement())
  examBoard String
  subject   String
  paper     String
  year      Int?
  label     String
  level     String
  document  String
  path      String @unique
}

model ExamQuestion {
  id           Int           @id @default(autoincrement())
  examBoard    String
  subject      String
  paper        String
  year         Int?
  label        String
  level        String
  question     Int
  document     String
  encoded      Boolean
  path         String        @unique
  QuestionText QuestionText?
}

model QuestionText {
  id         Int          @id @default(autoincrement())
  questionId Int          @unique
  content    String
  question   ExamQuestion @relation(fields: [questionId], references: [id])
}
